{
  "multipart": [
    {
      "when": {
        "north": false,
        "south": false,
        "east": false,
        "west": false,
        "up": false,
        "down": false
      },
      "apply": {
        "model": "refinedpipes:block/pipe/new/core"
      }
    },

    {
      "when": {
        "north": true,
        "south": true,
        "east": false,
        "west": false,
        "up": false,
        "down": false
      },
      "apply": {
        "model": "refinedpipes:block/pipe/new/straight"
      }
    },

    {
      "when": {
        "north": false,
        "south": false,
        "east": true,
        "west": true,
        "up": false,
        "down": false
      },
      "apply": {
        "model": "refinedpipes:block/pipe/new/straight",
        "y": 90
      }
    }
  ]
}